{# product/show.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ product.name }}</title>
</head>

<body style="background-image: url('{{ asset('images/background.jpg') }}'); background-size: cover;">
{% include './navbar.html.twig' %}
    <div style="background-color: blue; color: red; border: 5px solid black; border-radius: 0.375rem;" class="text-black">              
        <div class="name">{{ product.name }}</div>
        <div class="brand">{{ product.brand }}</div>
        <div class="price">{{ product.price }}</div>
        <img src="{{ asset('images/no_image.jpg') }}" alt="Apex Logo" width="100" height="100">
        <button id="buyButton" style="background-color: green; border: none; color: white; padding: 10px 20px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border-radius: 5px;">Buy</button>
    </div>
    <script>
    document.getElementById('buyButton').addEventListener('click', function() {
        alert('Congratulations! Product purchased.');
    });
</script>
</body>
</html>
