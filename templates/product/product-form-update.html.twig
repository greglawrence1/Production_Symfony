{# templates/product/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <h1>Edit Product</h1>
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.price) }}
    {{ form_row(form.brand) }}
    {{ form_row(form.save, {'label': 'Update'}) }}
    {{ form_end(form) }}
{% endblock %}
